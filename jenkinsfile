pipeline {
    agent any 

    environment {
        NODE_VERSION = '20x'
    }

    tools{
        nodejs "${NODE_VERSION}"
    }

    stages{
        stage('Checkout'){
            steps{
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps{
                script{
                    if(isUnix){
                        sh 'npm install'
                    }
                    else{
                        sh 'npm install'
                    }
                }
            }
        }
        stage('Start application and run tests'){
            steps{
                sh 'npm start &'
                sh 'wait-on http://localhost/8090'
                sh 'npm test'
            }
        }
        post{
            always{
                echo "CI pipeline completed"
            }
        }
    }
}