pipeline {
    agent any 

    environment {
        NODE_VERSION = '20x'
    }

    tools{
        nodejs "${NODE_VERSION}"
    }

    stages{
        stage('Checkout'){
            steps{
                git branch: 'main', url: 'https://github.com/petroffniki/StudentRegistryAppDemo'
            }
        }

        stage('Install Dependencies') {
            steps{
                script{
                    bat 'npm install'
                }
            }
        }
        stage('Start application and run tests'){
            steps{
                sh 'npm start &'
                sh 'wait-on http://localhost/8090'
                sh 'npm test'
            }
        }
        post{
            always{
                echo "CI pipeline completed"
            }
        }
    }
}